@model app_test_jmeter.Models.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Castro do curso";
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h3>Informe os dados do usu√°rio</h3>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-5 col-md-offset-3">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                 @Html.DisplayFor(model => model.Name)
            </div>
            <div class="form-group">
                <label class="control-label">Imagem Atual:</label>
                <p><img src="/@ViewBag.filePath/@Model.Filename" width="50px" height="50px" /></p>
            </div>
            <div class="form-group">
                <label class="control-label">Nova:</label>
                <input type="file" asp-for="PerfilImage" class="form-control" />
                <span asp-validation-for="PerfilImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Alterar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Details" asp-route-id="@Model.Id">Voltar</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
