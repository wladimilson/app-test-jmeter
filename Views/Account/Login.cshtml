@model app_test_jmeter.Models.LoginViewModel

@{
    ViewData["Title"] = "Logar";
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h4><p class="text-center">Informe seus dados</p></h4>
    </div>
</div>
<hr />
<div class="row">
    @if(ViewData.ContainsKey("Status"))
    {
        <div class="alert alert-warning alert-dismissible col-md-offset-3 col-md-6" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @ViewData["Status"]
        </div>
    }
    <div class="col-md-6 col-md-offset-3">
        <form  action="/login?returnurl=@ViewData["returnurl"]" method="POST">  
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">E-mail</label>
                <input asp-for="Email" class="form-control" required autofocus/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Senha:</label>
                <input asp-for="Password" class="form-control" required autofocus/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group col-md-offset-5 col-xs-offset-5">
                <button type="submit" class="btn btn-default">Entrar</button>
            </div>
        </form>  
    </div>
</div>
